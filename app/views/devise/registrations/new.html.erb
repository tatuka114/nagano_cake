<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-10 offset-md-1">
    <h2>新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :"(性)" %>
        <%= f.text_field :last_name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :"(名)" %>
        <%= f.text_field :first_name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :"(セイ)" %>
        <%= f.text_field :last_name_kana, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :"(メイ)" %>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :"メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :"郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :"住所" %>
        <%= f.text_field :address, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :"電話番号(ハイフンなし)" %>
        <%= f.text_field :telephone_numbur, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :"パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード(確認用)" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>