<div class="container">
  <h2>ジャンル一覧・追加</h2>
  <div class="row">
    <div class="col-xs-4">
      <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
        <%= f.label :ジャンル %>
        <%= f.text_field :name %>
        <%= f.submit "追加" ,class: "btn btn-primary" %>

      <% end %>
    </div>
    <div class="col-xs-8">
      <table>
          <thaed>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thaed>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id) ,class: "btn btn-primary" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

    </div>
  </div>
</div>