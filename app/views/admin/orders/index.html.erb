<div class="container">
  <h2>注文履歴一覧</h2>
  <div class="row">
    <div class="col">
      <table>
        <thaed>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <!--<th>注文ステータス</th>-->
          </tr>
        </thaed>
        <tbody>
          <tr>
            <% @order.each do |order| %>
              <td>
                <%= link_to admin_order_path(order.id) do %>
                  <%= order.created_at %>
                <% end %>
              </td>
              <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
              <td><%= order_details.amount %></td>
              <td><%#= order.status %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>