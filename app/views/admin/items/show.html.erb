<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
    <div class="col-xs-4">
      <%= attachment_image_tag @item, :image, :fill, 300, 300, format: "jpeg" %>
    </div>
    <div class="col-xs-8">
      <table>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格</td>
          <td><%= (@item.price*1.1).floor.to_s(:delimited, delimiter: ',') %>円</td>
        </tr>

      </table>
      <%= link_to "編集する", edit_admin_item_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>